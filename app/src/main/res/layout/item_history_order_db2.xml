<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    >



    <TableRow
        android:gravity="center">

            <TextView
                android:id="@+id/order_num_history_db2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="20dp"
                android:visibility="gone"
                />


        <Button
            android:id="@+id/preparing_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="preparing"
            android:visibility="gone"
            />


        <Button
            android:id="@+id/completed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="completed"
            android:visibility="gone"
            />
    </TableRow>

    <TextView
        android:id="@+id/order_email_history_db2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:textSize="10dp"
        android:visibility="gone"

        />


    <TableRow>



    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/drink_name_cart_history_db2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/drink_numerosity_history_db2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </TableRow>





</TableLayout>