<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/custom_border2">

    <TableRow>
        <TextView
            android:id="@+id/local_name_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textSize="16dp"
            android:textColor="@color/brown_1"
            />


        <TextView
            android:id="@+id/order_num_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textSize="16dp"
            android:textColor="@color/brown_1"
            />

        <TextView
            android:id="@+id/timestamp_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textSize="15dp"
            android:textColor="@color/brown_1"
            />

        <TextView
            android:id="@+id/status_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/brown_1"
            />

    </TableRow>


    <TableRow>
        <TextView
            android:id="@+id/drink_name_cart_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B"
            android:textSize="16dp"
            android:textColor="@color/brown_1"
            />

        <TextView
            android:id="@+id/drink_price_cart_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B"
            android:textSize="16dp"
            android:textColor="@color/brown_1"
            />

        <TextView
            android:id="@+id/drink_numerosity_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B"
            android:textSize="16dp"
            android:textColor="@color/brown_1"/>

    </TableRow>

</TableLayout>